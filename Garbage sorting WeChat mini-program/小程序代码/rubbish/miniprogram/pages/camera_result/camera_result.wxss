page{
  height: 100%;
  width: 100%;
  font-size: 25rpx;
}
.container {
  padding: 0;
  justify-content: flex-start;
  background: #dedede;
  width: 100%;
  height: 100%;
}
.scroll-view{
  height: 100%;
  
}
.root{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.header_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 15rpx 0 15rpx 0;
}
.header_box .msg{
  padding: 0 20rpx 0 20rpx;
}
.header_box button{
  margin: 0 20rpx 0 0 ;
}
.list{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-bottom: 30rpx;
  font-size: 25rpx;
}
.list .item{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 10rpx 0 10rpx 0;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  padding: 20rpx;
}