page{
  height: 100%;
  width: 100%;
  font-size: 25rpx;
}
.container {
  padding: 0;
  justify-content: flex-start;
  background: #dedede;
  width: 100%;
  height: 100%;
}
.scroll-view{
  width: 100%;
  height: 100%;
  
}
.search_box{
  background: #ffffff;
  display: flex;
  justify-content: center;
  padding: 20rpx 0 0 0;
}
.search_inp {
  width: 90%;
  text-align: center;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  background: #dedede;
  border-radius: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.func-box{
  display: flex;
  justify-content: space-around;
  padding: 25rpx 0 25rpx 0;
  background: #ffffff;
}
.func-box .item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 18rpx;
  position: relative;
}
.func-box .item image{
  width: 50rpx;
}
.func-box .item text{
  padding-top: 5rpx;
}
.func-box .item .share_btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0);
}

.hot-pros{
  display: flex;
  flex-direction: column;
  padding: 20rpx 15rpx 20rpx 55rpx;
}
.hot-pros .title{
  padding: 0 0 15rpx 0;
}
.hot-pros .list{
  display: flex;
}
.hot-pros .list .item{
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  margin: 0 20rpx 0 0;
  display: block;
  float: left;
  background: #fff;
  color: gray;
}
.category-box-outer{
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20rpx 0 0 0;
}
.category-box{
   display: flex;
   flex-wrap: wrap;
   justify-content: space-between;
   width: 90%;
   background: #ffffff;
   border-radius: 10rpx;
}
.category-box image{
   width: 250rpx;
   height: 250rpx;
   margin: 20rpx 30rpx 20rpx 20rpx;
}

.warning{
  color: red;
  padding: 20rpx 40rpx 0 40rpx;
  display: flex;
  justify-content: center;
}